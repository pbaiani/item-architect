<form class="item-architect-container">
    {{!-- Configuration Header --}}
    <header class="forge-config">
        <div class="form-group">
            <label>Item Category</label>
            <select name="category" id="ia-category">
                <option value="" selected disabled>-- Select Category --</option>
                <option value="weapon">Standard Weapon</option>
                <option value="armor">Standard Armor</option>
                <option value="shield">Standard Shield</option>
                <option value="worn">Worn Item</option>
            </select>
        </div>

        <div class="form-group" id="ia-base-item-group">
            <label>Base Item</label>
            <div style="display: flex; gap: 5px;">
                <select name="baseItem" id="ia-base-item" disabled style="flex: 1;">
                    <option value="">Select Category First...</option>
                </select>
                <button type="button" id="ia-random-base-btn" title="Randomize Base" style="flex: 0 0 40px;" disabled>
                    <i class="fas fa-dice"></i>
                </button>
            </div>
        </div>

        <button type="button" id="ia-draft-btn">
            <i class="fas fa-hammer"></i> Draft Item
        </button>
    </header>

    {{!-- The Workspace (Builder Bench) --}}
<div id="ia-workspace" style="display: none; margin-top: 15px;">
        
        <div class="ia-workspace-header">
            <div class="ia-header-left">
                <i class="fas fa-signature"></i>
                <label>Item Name</label>
                <input type="text" id="ia-custom-name" placeholder="Auto-naming...">
            </div>

            <div class="ia-header-right">
                <span id="ia-calculated-level">1</span>
            </div>
        </div>


        
        {{!-- 1. Physical Forge (Weapons & Armor Only) --}}
        <div id="ia-physical-bench" class="workspace-grid">
            <div class="build-section">
                <label style="margin-top: 10px;"><i class="fas fa-plus-circle"></i> Fundamentals</label>
                <div class="rune-row" style="display: flex; gap: 5px;">
                    <select name="potency" id="ia-potency-runes" style="flex: 1;"></select>
                    <select name="striking" id="ia-striking-runes" style="flex: 1;"></select>
                </div>

                <div class="ia-form-group">
                    <label>Special Material</label>
                    <select id="ia-special-materials-tag" class="ia-select-box"></select>
                    <p id="ia-material-description" class="ia-info-text"></p>
                </div>
            </div>

            <div class="build-section">
                <label><i class="fas fa-fire"></i> Property Runes</label>
                <div id="ia-property-slots">
                    <p style="font-size:0.8em; color:#777; font-style:italic;">Requires Potency +1 or higher</p>
                </div>
            </div>
        </div>

        {{!-- 2. Logic/Rules Bench (Every Item) --}}
    <div class="ia-logic-bench">
       <h3><i class="fas fa-microchip"></i> Logic Bench</h3>
      <div class="ia-rule-row-creator">
        
        <div class="ia-field-group">
            <label>Rule Category</label>
            <select id="ia-rule-category">
                <option value="none">--- Select a Category ---</option>
                <option value="numerical">Numerical Bonuses</option>
                <option value="strike">Strike Modifiers</option>
                <option value="defense">Defense & Resistance</option>
                <option value="sensory">Sensory & Auras</option>
            </select>
        </div>

        <div id="ia-config-container" class="ia-dynamic-form-grid">
            <p class="ia-placeholder-text">Select a category above to configure the rule logic.</p>
        </div>

        <button type="button" id="ia-add-rule-btn" class="ia-btn-full">
            <i class="fas fa-plus"></i> Add Rule to Item
        </button>

                {{!-- --- NEW: ACTIVE RULES LIST --- --}}
                <div class="ia-active-rules-container" style="margin-top: 10px; background: rgba(0,0,0,0.2); padding: 8px; border-radius: 4px;">
                    <label style="font-size: 0.8em; color: #aaa; text-transform: uppercase;">Current Logic:</label>
                    <ul id="ia-rules-ul" style="list-style: none; padding: 0; margin: 5px 0 0 0;">
                        <li style="color: #777; font-style: italic; font-size: 0.9em;">No logic added yet...</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{{!-- 3. Final Forge Action --}}
<footer class="ia-forge-footer" style="margin-top: 20px; padding-top: 15px; border-top: 2px solid #ff6400;">
    <button type="button" id="ia-forge-btn" class="ia-btn-forge-final" style="width: 100%; padding: 12px; background: #3c5243; color: white; font-weight: bold; font-size: 1.1em; border: 1px solid #4caf50; cursor: pointer;" disabled>
        <i class="fas fa-anvil"></i> FORGE ITEM
    </button>
    <p style="font-size: 0.75em; color: #888; text-align: center; margin-top: 8px; font-style: italic;">
        This will create the item in your Items directory with all runes and rules applied.
    </p>
</footer>

</form>